{
  "name": "tipmyst",
  "version": "0.4.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "sdk:build": "pnpm --filter ./packages/fhevm-sdk build",
    "chain": "pnpm hardhat:chain",
    "compile": "pnpm hardhat:compile",
    "deploy:localhost": "pnpm hardhat:deploy && pnpm generate",
    "deploy:sepolia": "pnpm hardhat:deploy:sepolia && pnpm generate",
    "fork": "pnpm hardhat:fork",
    "generate": "ts-node ./scripts/generateTsAbis.ts",
    "hardhat:chain": "pnpm --filter ./packages/hardhat chain",
    "hardhat:check-types": "pnpm --filter ./packages/hardhat check-types",
    "hardhat:clean": "pnpm --filter ./packages/hardhat clean",
    "hardhat:compile": "pnpm --filter ./packages/hardhat compile",
    "hardhat:deploy": "pnpm --filter ./packages/hardhat deploy:localhost",
    "hardhat:deploy:sepolia": "pnpm --filter ./packages/hardhat deploy:sepolia",
    "hardhat:fork": "pnpm --filter ./packages/hardhat fork",
    "hardhat:verify": "pnpm --filter ./packages/hardhat verify",
    "hardhat:test": "pnpm --filter ./packages/hardhat test",
    "test": "pnpm hardhat:test"
  },
  "devDependencies": {
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
